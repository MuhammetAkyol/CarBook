@model List<ResultBannerDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Ana Sayfa Banner Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana Sayfanın Banner Alanında Bulunan Bilgileri Aşağıdan Düzenleyebilirsiniz. Tema Bütünlüğünün Bozulmaması Adına Sadece 1 Adet Veri Girişi Yapınız.
                            Aksi Durumlarda Tema Bütünlüğü Bozulacaktır.

                        </p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <p><i>Daha Önce Eklenen Herhangi Bir Marka Bulunamadı. Aşağıdaki Yeni Marka Girişi Butonundan Bir Marka Ekleyebilirsiniz</i></p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>Başlık</th>
                                            <th>Açıklama</th>
                                            <th>Video Url</th>
                                            <th>Video Açıklama</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Youtube'da Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            <tr>
                                                <td>@item.Title</td>
                                                <td>@item.Description</td>
                                                <td>@item.VideoUrl</td>
                                                <td>@item.VidepDescription</td>
                                                <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminBanner/UpdateBanner/@item.BannerID" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminBanner/RemoveBanner/@item.BannerID" class="btn btn-outline-dark">Youtube'da Aç</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        }
                        <a href="/Admin/AdminBanner/CreateBanner/" class="btn btn-outline-primary">Yeni Banner Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


