@model UpdateBannerDto
@{
    ViewData["Title"] = "UpdateBanner";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yeni Banner Bilgisi Girişi</h4>
                        <p class="card-subtitle mb-4">
                            Banner Alanına Veri Girişini Aşağıdaki Panel'den Yapabilirsiniz.
                            Tasarımda Bozulma Olmaması Adına Yeni Bir Banner Girişi Yaptıktan Sonra Önceki Banner Alanını Silin, Sadece 1 Tane Banner Verisi Kalmalıdır.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <input type="hidden" asp-for="BannerID"/>
                                <label for="exampleInputTitle">Başlık</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Marka Adı Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescrition">Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputDescrition" asp-for="Description" placeholder="Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoDescription">Video Açıklama</label>
                                <input type="text" class="form-control" id="exampleInputVideoDescription" asp-for="VidepDescription" placeholder="Video Açıklama Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputVideoUrl">Video Url</label>
                                <input type="text" class="form-control" id="exampleInputVideoUrl" asp-for="VideoUrl" placeholder="Vide Url Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-success waves-effect waves-light">Banner Bilgisini Güncelle</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


