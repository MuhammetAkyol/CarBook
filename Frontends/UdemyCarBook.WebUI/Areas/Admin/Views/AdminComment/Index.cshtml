@model List<ResultCommentDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Yorum Listesi - BlogID:@ViewBag.v</h4>
                        <p class="card-subtitle mb-4">
                            Bloglarla İlgili  o Bloğa Yapılmış Olan Yorum Listesini Bu Sayfadan Görebilirsiniz.
                            İlgili Yorumları Kaldırabilir ya da Aktif Hale Getireblirsiniz. Bunun İçin Yorumların Altında Yer Alan Butonları Kullanabilirsiniz.
                        </p>
                        @foreach (var item in Model)
                        {
                            Count++;
                            <div class="col-md-12">
                                <div class="card">
                                    <h5 class="card-header">Yorum - @Count</h5>
                                    <div class="card-body">
                                        <h4 class="card-title">@item.Name</h4>
                                        <p class="card-text">
                                           @item.Description
                                        </p>
                                        <a href="#" class="btn btn-primary waves-effect waves-light">Yorumu Kaldır</a>
                                    </div>
                                </div>
                            </div>
                        }                       
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>





