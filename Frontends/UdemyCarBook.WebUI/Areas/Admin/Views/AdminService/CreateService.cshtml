@model CreateServiceDto
@{
    ViewData["Title"] = "CreateService";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Hizmet Sayfası Veri Girişi Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana Sayfa ve Hizmetler Bölümünde Yer Alan Hizmet Listesinin Admin Tarafındaki İşlemlerini Aşağıdaki Sayfadan Gerçekleştirebilirsiniz.
                            Tema Bütünlüğünü Korumak Adına 4 Adet Hizmet Girişi Yapınız.
                        </p>
                        <form method="post">
                            <div class="form-group">
                                <label for="exampleInputTitle">Hizmet Başlığı</label>
                                <input type="text" class="form-control" id="exampleInputTitle" asp-for="Title" placeholder="Hizmet Başlığı Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputDescription">Hizmet Açıklaması</label>
                                <input type="text" class="form-control" id="exampleInputDescription" asp-for="Description" placeholder="Hizmet Açıklaması Girişi Yapınız">
                            </div>
                            <div class="form-group">
                                <label for="exampleInputIconUrl">Hizmet İkon Url</label>
                                <input type="text" class="form-control" id="exampleInputIconUrl" asp-for="IconUrl" placeholder="Hizmret İkon Url Girişi Yapınız">
                            </div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light">Hizmet Bilgisini Kaydet</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




