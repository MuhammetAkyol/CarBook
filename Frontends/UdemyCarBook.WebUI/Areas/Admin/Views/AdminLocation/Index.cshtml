@model List<ResultLocationDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int Count = 0;
}

<div class="page-content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Lokasyon Bilgileri Alanı</h4>
                        <p class="card-subtitle mb-4">
                            Ana Sayfa ve Araç Kiaralama Sayfasında Yer Alan Araçların Alınış ve Bırakılış Noktolarını Temsil Eden Yer Lokasyon kısmıdır. 
                            Aşağıda Araç Kiralama Noktalarına Ait Lokasyon Bilgilerinin İsimleri Yer Almaktadır. Sağ Tarafta Yer Alan Buton Üzerinden
                            Bu Lokasyonun Harita Bilgisine Erişim Sağlayabilirsiniz.
                        </p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <p><i>Daha Önce Eklenen Herhangi Bir Marka Bulunamadı. Aşağıdaki Yeni Marka Girişi Butonundan Bir Marka Ekleyebilirsiniz</i></p>
                            </div>
                        }
                        else
                        {
                            <div class="table-responsive">
                                <table class="table mb-0">
                                    <thead>
                                        <tr>
                                            <th>#</th>
                                            <th>Lokasyon</th>
                                            <th>Sil</th>
                                            <th>Güncelle</th>
                                            <th>Konumu Aç</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in Model)
                                        {
                                            Count++;
                                            <tr>
                                                <td>@Count</td>
                                                <td>@item.Name</td>
                                                <td><a href="/Admin/AdminLocation/RemoveLocation/@item.LocationID" class="btn btn-outline-danger">Sil</a></td>
                                                <td><a href="/Admin/AdminLocation/UpdateLocation/@item.LocationID" class="btn btn-outline-success">Güncelle</a></td>
                                                <td><a href="/Admin/AdminLocation/LocationDetail/@item.LocationID" class="btn btn-outline-dark">Konumu Aç</a></td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>

                            </div>
                        }
                        <a href="/Admin/AdminLocation/CreateLocation/" class="btn btn-outline-primary">Yeni Lokasyon Girişi</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

