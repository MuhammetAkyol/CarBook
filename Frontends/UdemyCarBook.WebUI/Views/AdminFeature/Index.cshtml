@model List<ResultFeatureDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
    int count = 0;
}

<div class="page-content">
    <div class="container-fluid">

        <!-- start page title -->
        <div class="row">
            <div class="col-xl-12">
                <div class="card">
                    <div class="card-body">
                        <h4 class="card-title">Araba Özellikler Listesi</h4>
                        <p class="card-subtitle mb-4">
                            Arabalarla ilgili Yeni Özellik Ekleme, (Klima, Bluetooth, Audio, Elektrik vs.) Özellikler Listesi,
                            Özellikler Üzerinde Düzenleme ve Bir Özelliği Kaldırma İşlemini Bu Sayfa Üzerinden Gerçekleştirebilirsiniz.
                            Temada Veri Tutatrlılığını Sağlyabilmek İçin 3'ün Katı Şeklinde veri Girişi Yapınız.
                        </p>
                        @if (Model.Count == 0)
                        {
                            <div class="alert alert-danger mt-3" role="alert">
                                <p><i>Daha Önce Eklenen Herhangi Bir Özellik Bulunamadı. Aşağıdaki Yeni Özellik Girişi Butonundan Bir Özellik Ekleyebilirsiniz</i></p>
                                </div>
                        }
                        else
                        {
                        <div class="table-responsive">
                            <table class="table mb-0">
                                <thead>
                                    <tr>
                                        <th>#</th>
                                        <th>Özellik</th>
                                        <th>Sil</th>
                                        <th>Güncelle</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <th scope="row">@count</th>
                                            <td>@item.Name</td>
                                            <td><a href="/AdminFeature/RemoveFeature/@item.FeatureID" class="btn btn-outline-danger">Sil</a></td>
                                            <td><a href="/AdminFeature/UpdateFeature/@item.FeatureID" class="btn btn-outline-success">Güncelle</a></td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            
                        </div>
                        }
                        <a href="/AdminFeature/CreateFeature/" class="btn btn-outline-primary">Yeni Özellik Girişi</a>
                    </div>
                    <!-- end card-body-->
                </div>
                <!-- end card -->

            </div>
            <!-- end col -->


        </div>
        <!-- end page title -->

    </div> <!-- container-fluid -->
</div>

